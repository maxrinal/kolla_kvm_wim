[master]
%{ for index, host_name in hosts_name ~}
%{ if length(regexall(".*master.*", host_name)) > 0 ~}
${hosts_ipv4[index]}
%{ endif ~}
%{ endfor ~}

[node]
%{ for index, host_name in hosts_name ~}
%{ if length(regexall(".*worker.*", host_name)) > 0 ~}
${hosts_ipv4[index]}
%{ endif ~}
%{ endfor ~}

